node_modules/
.next/
out/
dist/
build/

# Explicit (optional clarity)
frontend/node_modules/
frontend/.next/
ui/node_modules/
ui/.next/

# Local env
frontend/.env.local
frontend/.env
ui/.env.local
ui/.env

